<!DOCTYPE html>
<html>
  <head>
    <title>Login</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="/js/page.js"></script>
  </head>
  <body>
      <h2> Welcome to RevealWeb! </h2>
      <div class="messages">
      <% if(msg && 'login' in msg) { %>
        <% for (let m of msg.login) { %>
            <p> <%= m %>
        <% } %>
      <% } %>
      </div>
      <a href="/auth/twitter">
          <img src="/images/twitter_login_button.png"></img>
      </a>
      <form action="/login" method="post">
          <div>
              <label>UserID:</label>
              <input type="text" name="username">
          </div>
          <div>
              <label>Password:</label>
              <input type="password" name="password">
          </div>
          <div>
              <input type="submit" value="Login">
          </div>
      </form>
  </body>
</html>
