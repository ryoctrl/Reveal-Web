              </fieldset>
          </form>
          </div>
          <form id="signupForm" action="/signup" method="POST">
              <fieldset>
                  <label> Username </labeL>
                  <input type="text" name="username"/>
                  <label> Password </label>
                  <input type="password" name="password"/>
                  <input type="submit" value="Signup" />
              </fieldset>
          </form>

      </template>
