  <body>
      <div class="contents">
          <h1>Reveal Web</h1>
          <h3>THE MARKDOWN PRESENTATION WEB SERVICE</h3>

          <div class="buttons"> 
                <form>
                    <input id="login-button" class="button" value="Login" readonly>
                </form>

                <form>
                    <input id="signup-button" class="button" value="Signup" readonly>
